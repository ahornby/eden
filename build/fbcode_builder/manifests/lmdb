[manifest]
name = lmdb

[build.not(os=windows)]
builder = make
subdir = lmdb-LMDB_0.9.31/libraries/liblmdb

[build.os=windows]
builder = cmake
subdir = lmdb-LMDB_0.9.31/libraries/liblmdb
patchfile = lmdb_cmake.patch

[download]
url = https://github.com/LMDB/lmdb/archive/refs/tags/LMDB_0.9.31.tar.gz
sha256 = dd70a8c67807b3b8532b3e987b0a4e998962ecc28643e1af5ec77696b081c9b0

[make.build_args.not(os=windows)]
BUILD_STATIC_ONLY=y

[make.install_args.not(os=windows)]
install
BUILD_STATIC_ONLY=y
